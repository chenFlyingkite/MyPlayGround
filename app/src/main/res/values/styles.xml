    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="notificationButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">#8000</item>
    </style>

    <style name="notificationIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="baseText">
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="notificationText" parent="baseText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="notifText" parent="baseText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="chart_column">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
